{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on"
			}
		},
		"enabled": true
	},
	"css": {
		"parser": { "tailwindDirectives": true }
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!!node_modules",
			"!!packages/ui/src/components/*.tsx",
			"!!apps/**/src/routeTree.gen.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"useSortedClasses": "error"
			},
			"recommended": true
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
